---
import Head from "./_head.astro";
import Header from "./_header.astro";
import Footer from "./_footer.astro";
import setting from "@/setting.json";
import "./_global.css";

type Props = {
  title?: string;
  description?: string;
};

const { title = setting.site.title, description = setting.site.description } =
  Astro.props;
---

<html lang="en">
  <head>
    <Head title={title} description={description} />
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
